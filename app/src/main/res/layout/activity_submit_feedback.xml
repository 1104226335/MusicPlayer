<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feedback.SubmitFeedbackActivity"
    android:orientation="vertical"
    android:background="@color/setting_background">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_submit_feedback_setting_title"
        xmlns:appBarLayout="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        appBarLayout:expanded="true"
        appBarLayout:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/setting_background"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/app_submit_feedback_setting_toolbar"
            xmlns:toolbar="http://schemas.android.com/apk/res-auto"
            style="@style/MP.Theme.Widget.Toolbar"
            toolbar:layout_scrollFlags="enterAlways"
            />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/submit_feedback_setting_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <!--<TextView-->
            <!--android:layout_width="50mm"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:textColor="@color/setting_font_color"-->
            <!--android:text="在中间"-->
            <!--android:visibility="visible"-->
            <!--/>-->
        <EditText
            android:id="@+id/edit_submit_feedback"
            android:layout_width="50mm"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            android:background="@color/setting_primary"
            android:textColor="@color/setting_font_color"
            />
        <Button
            android:id="@+id/button_submit_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/setting_primary"
            android:textColor="@color/setting_font_color"
            android:layout_marginTop="40dp"

            android:text="提交反馈"
            />

    </LinearLayout>
</LinearLayout>